@model Pa_Note_WebApp.Models.Note

@{
    ViewData["Title"] = "Edit Note";
}

<h2>Edit Note</h2>
<form method="post">
    <input type="hidden" asp-for="NoteId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Title:</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label">Content:</label>
        <textarea asp-for="Content" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update</button>
</form>
